{
  "compilerOptions": {
    "types": [
      "reflect-metadata"
    ],
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "server": "deno run  -A --allow-env --allow-net --watch --config deno.json --import-map import_map.json  --unstable ./src/main.ts"
  },
  "fmt": {
    "options": {
      "semiColons": true,
      "singleQuote": true,
      "useTabs": false
    }
  },
  "importMap": "./import_map.json"
}